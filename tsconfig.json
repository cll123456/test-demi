{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/exampleV3",
    "packages/exampleV2",
    "**/dist",]
}